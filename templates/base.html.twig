<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="author" content="Raul Bethencourt Gonzalez">
    <meta name="description" content="Carpa is a pedagogical platform for modern training schools">
    <title>{% block title %}Admin - CARPA{% endblock %}</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
        <link rel="icon" type="image/x-icon" href="{{ asset('images/favicon.ico') }}?v=2"/>
    {% endblock %}
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    {% block logo %}
        <a class="navbar-brand ml-4" href="{{ path('user_index') }}">
            <img src="{{ asset('images/logo-carpa.svg') }}" width="55" height="55" alt="logo ubuntu">
        </a>
    {% endblock %}

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <form class="form-inline my-2 my-lg-0">
            <input class="form-control mr-sm-2 bg-dark text-white" type="search" placeholder="Search..."
                   aria-label="Search">
        </form>
        <ul class="navbar-nav justify-content-between align-items-center w-100">
            {% block home %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('user_index') }}">Home</a>
                </li>
            {% endblock %}
            <div class="d-flex align-items-center">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_logout') }}">Logout</a>
                </li>
            {% block profile %}
                <li class="nav-item">
                    <a class="nav-link mr-2" href="{#{{ path('user_profile') }}#}">
                        <img class="profile" src="{{ asset('images/profile.png') }}" alt="profile icon"></a>
                </li>
            {% endblock %}
            </div>
        </ul>
    </div>
</nav>
<div class="container-sm d-flex justify-content-center flex-column  p-4 mt-lg-5 mb-xl-5 bg-white border rounded-lg">
    {% block body %}{% endblock %}
</div>
{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}
</body>
</html>
