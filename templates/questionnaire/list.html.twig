{% extends "base.html.twig" %}

{% block title %}Liste des Activites
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-12">
			<h1>Liste des Activites</h1>
			<table class="table border-bottom">
				<thead class="thead-dark">
					<tr>
						<th scope="col"></th>
						<th scope="col">Titre</th>
						<th scope="col">Niveau</th>
						<th scope="col"></th>
					</tr>
				</thead>
				<tbody>
					{% for questionnaire in questionnaires %}
						<tr>
							<th scope="row">{{ loop.index }}</th>
							<td>{{ questionnaire.title }}</td>
							<td>{{ questionnaire.difficulty}}</td>
							<td>
								<a href="{{ path('add_questionnaire_lesson', {questionnaire: questionnaire.id, lesson: lesson_id, classroom: classroom_id}) }}" class="btn btn-secondary mb-2" role="button">Ajouter</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}
